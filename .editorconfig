root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
quote_type = single

[*.md]
trim_trailing_whitespace = false
max_line_length = 0

[*.{yml,yaml}]
quote_type = double
